<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%=listTitle + ' List'%> </h1>
</div>

<div class="box">

  <%newListItems.forEach(function(item){%>
  <form action="/delete/<%=listTitle%>" method="POST">
    <div class="item">
      <input id='chbx' type="checkbox" name="checkbox"  onChange="this.form.submit()" value="<%=item._id%>">
      <!-- <input type="hidden" name="cltitle" value="<%=listTitle%>"></input> -->
      <p><%= item.name %></p>
    </div>
  </form>
  <%})%>
  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value='<%=listTitle%>'>+</button>
  </form>
</div>

<%- include("footer") -%>